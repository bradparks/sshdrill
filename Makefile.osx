
LD=$(CC)

CFLAGS+= -Wall
CFLAGS+= -Wstrict-prototypes -Wmissing-prototypes
CFLAGS+= -Wmissing-declarations
CFLAGS+= -Wshadow -Wpointer-arith -Wcast-qual
CFLAGS+= -Wsign-compare
LDADD=	-lutil
PREFIX?= $(DESTDIR)/usr/local
BINDIR?= $(PREFIX)/bin
MANDIR?= $(DESTDIR)/usr/local/share/man/man1

CPPFLAGS+=-DHAVE_UTMP_H -DHAVE_STRLCPY -DHAVE_UTIL_H

.c.o:
	$(CC) $(CFLAGS) $(CPPFLAGS) $(LDFLAGS) -c $< -o $@

sshdrill: sshdrill.o strlcpy.o
	$(LD) -o $@ sshdrill.o strlcpy.o $(LDFLAGS) $(LDADD)

install: sshdrill
	install -d $(BINDIR)
	install -d $(MANDIR)
	install sshdrill $(BINDIR)
	install sshdrill.1 $(MANDIR)

clean:
	rm -f *.o sshdrill
